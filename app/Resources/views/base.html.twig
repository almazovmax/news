<!DOCTYPE html>
<html>
<head>
    <title>EXPRESS NEWS{% block title %}{% endblock %}</title>
    {% block stylesheet %}
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" type="text/css" media="all" />
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" media="all" />
        <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css" media="all" />
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('js/jquery-1.11.0.min.js') }}"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    {% endblock %}
</head>
<body>
<div class="header" id="ban">
    <div class="container">
        <div class="col-md-6 text-left">
            {% if is_granted('ROLE_USER') %}
            <nav class="link-effect-7" id="link-effect-7">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('index') }}">Home</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('news_index') }}">List of news</a></li>
                        <li><a href="{{ path('news_new') }}">Add news</a></li>
                        <li><a href="{{ path('user_index') }}">User list</a></li>
                    {% endif %}
                </ul>
            </nav>
            {% endif %}
         </div>
        <div class="col-md-6 text-right">
            {% if is_granted('ROLE_USER') %}
                <a class="btn btn-info" href="{{ path('logout') }}">Logout</a>
            {% endif %}
        </div>
    </div>
</div>
<div class="header-bottom">
    <div class="container">
        <div class="logo">
            <h1><a href="{{ path('index') }}">EXPRESS NEWS</a></h1>
            <p><label class="of"></label>LET'S MAKE A BREAKING NEWS<label class="on"></label></p>
        </div>
    </div>
</div>
{% block body %}{% endblock %}

<div class="copyright">
    <div class="container">
        <p>Â© 2017 Express News. Nothing Rights Reserved</a> </p>
    </div>
</div>
</body>
</html>