{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/bootstrap.file_input.js') }}"></script>
{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('css/bootstrap.file_input.css') }}" rel="stylesheet" type="text/css" media="all" />
{% endblock %}

{% block body %}
<div class="container">
    <div class="col-md-8 col-md-offset-2 technology-left">
        <div class="blog">
            <h2 class="text-center">Add news</h2>
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.header) }}
                {% if form_errors(form.header) %}
                    <ul class="list-unstyled">
                        <li class="text-danger">
                            <span class="glyphicon glyphicon-exclamation-sign"></span>
                            {{ form_errors(form.header)|striptags }}
                        </li>
                    </ul>
                {% endif %}
                {{ form_widget(form.header, {
                    'attr': {
                        'class':'form-control'
                    }
                }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                {% if form_errors(form.description) %}
                    <ul class="list-unstyled">
                        <li class="text-danger">
                            <span class="glyphicon glyphicon-exclamation-sign"></span>
                            {{ form_errors(form.description)|striptags }}
                        </li>
                    </ul>
                {% endif %}
                {{ form_widget(form.description, {
                    'attr': {
                        'rows': 4,
                        'class':'form-control'
                    }
                }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.text) }}
                {% if form_errors(form.text) %}
                    <ul class="list-unstyled">
                        <li class="text-danger">
                            <span class="glyphicon glyphicon-exclamation-sign"></span>
                            {{ form_errors(form.text)|striptags }}
                        </li>
                    </ul>
                {% endif %}
                {{ form_widget(form.text, {
                    'attr': {
                        'rows': 8,
                        'class':'form-control'
                    }
                }) }}
                {{ form_widget(form._token) }}
            </div>
            {{ form_label(form.image) }}
            {% if form_errors(form.image) %}
                <ul class="list-unstyled">
                    <li class="text-danger">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>
                        {{ form_errors(form.image)|striptags }}
                    </li>
                </ul>
            {% endif %}
            <div class="input-group image-preview">
                <input type="text" class="form-control image-preview-filename" disabled="disabled">
                <span class="input-group-btn">
                <button type="button" class="btn btn-default image-preview-clear" style="display:none;">
                    <span class="glyphicon glyphicon-remove"></span> Clear
                </button>
                <div class="btn btn-default image-preview-input">
                    <span class="glyphicon glyphicon-folder-open"></span>
                    <span class="image-preview-input-title">Browse</span>
                    {{ form_widget(form.image, {
                        'label_attr':{
                            'class': 'sr-only'
                        }
                    }) }}
                </div>
                </span>
            </div>
            <hr>
            <div class="col-md-6 text-left">
                <input class="btn btn-success" type="submit" value="Create" />
                {{ form_end(form, {'render_rest': false}) }}
            </div>
            <div class="col-md-6 text-right">
            <a href="{{ path('news_index') }}">Back to the list</a>
            </div>
        <div class="clearfix"> </div>
        </div>
    </div>
</div>
{% endblock %}
