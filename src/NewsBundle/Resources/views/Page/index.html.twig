{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="col-md-8 col-md-offset-2 technology-left">
            <div class="blog">
                <h2 class="w3">NEWS</h2>
                {% for news in news %}
                    <div class="blog-grids1">
                        <div class="blog-grid">
                            <div class="blog-grid-left1">
                                <a href="{{ path('news_show', { 'id': news.id }) }}"><img src="{{ asset(news.image) }}" alt=" " class="img-responsive"></a>
                            </div>
                            <div class="blog-grid-right1">
                                <a href="{{ path('news_show', { 'id': news.id }) }}">{{ news.header }}</a>
                                <h4>{{ news.date|date('Y-m-d') }}</h4>
                                <p style="text-align: justify">{{ news.description }}</p>
                            </div>
                            <hr>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                {% endfor %}
            </div>
            {{ knp_pagination_render(news) }}
        </div>
    </div>
{% endblock %}
