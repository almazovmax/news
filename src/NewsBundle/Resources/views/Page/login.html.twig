{% extends "::base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="col-md-8 col-md-offset-2 technology-left">
            <div class="blog">
                <h2 class="text-center">Login or <a href="{{ path('register') }}">Create an Account</a></h2>
                <hr>
                    <form action="{{ path('login') }}" method="post" class="form-signin">
                        {% if error %}
                            <div class="alert alert-danger">
                                <ul class="list-unstyled">
                                    <li><span class="glyphicon glyphicon-exclamation-sign"></span> {{ error.message | replace({"Bad credentials." : "Invalid username or password."})  }}</li>
                                </ul>
                            </div>
                        {% endif %}
                        <p class="text-center text-success">{{ message }}</p>
                        <div class="form-group">
                            <label for="username" class="sr-only">Username:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}"  placeholder="Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="password" class="sr-only">Password:</label>
                            <input type="password" id="password" name="_password" placeholder="Password" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <input class="btn btn-success" type="submit" value="Login">
                        </div>
                    </form>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
{% endblock %}